# Always use pnpm instead of npm
package-manager=pnpm@latest

# Disable progress bar (avoids WMIC warning on Windows)
progress=false

# Make pnpm more compatible with tools expecting flat node_modules
shamefully-hoist=true

# Avoid hardlinks/symlinks issues on Windows (safe but uses more disk)
node-linker=hoisted

# Strict peer dependencies checks (optional, helps catch version mismatches)
strict-peer-dependencies=false

# Store cache path (can change if you want to put pnpm store on another drive)
store-dir=C:\pnpm-store
